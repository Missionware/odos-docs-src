{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/Mc3s.Odos/Mc3s.Odos.csproj"
          ],
		  "src": "../../odos"
        }
      ],
      "dest": "api",
	  "filter": "filterConfig.yml",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
        ]
      },
      {
        "files": [
		  "changelogs/**.md",
		  "changelogs/**/toc.yml",
          "manual/**.md",
          "manual/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "logo.svg",
          "favicon.ico"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
	  "custom_template"
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
	"globalMetadata": {
      "_appTitle": "ODOS Documentation",
      "_appFooter": "<span>Copyright Â© Missionware.",
	  "_disableContribution":"true",
	  "_enableSearch": "true"
    },
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}